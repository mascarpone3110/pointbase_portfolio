{
  "family": "pb-backend-task",
  "networkMode": "awsvpc",
  "requiresCompatibilities": ["FARGATE"],
  "cpu": "256",
  "memory": "512",
  "executionRoleArn": "arn:aws:iam::321869097870:role/ecsTaskExecutionRole",
  "taskRoleArn": "arn:aws:iam::321869097870:role/pb-backend-task-role",
  "containerDefinitions": [
    {
      "name": "backend",
      "image": "321869097870.dkr.ecr.ap-northeast-1.amazonaws.com/pb-backend:v1.0.1",
      "essential": true,
      "portMappings": [
        {
          "containerPort": 8000,
          "protocol": "tcp"
        }
      ],
      "environment": [
        { "name": "ENV_MODE", "value": "prod" },
        { "name": "DJANGO_DEBUG", "value": "False" },

        { "name": "DB_ENGINE", "value": "mysql" },
        { "name": "DB_NAME", "value": "pb_backend" },
        { "name": "DB_HOST", "value": "ls-ddf2f585417396e165ad5d7c55a7da80eacdc7f3.chayo6awoqom.ap-northeast-1.rds.amazonaws.com" },
        { "name": "DB_PORT", "value": "3306" },

        { "name": "DJANGO_ALLOWED_HOSTS", "value": "*" },
        { "name": "CORS_ALLOWED_ORIGINS", "value": "http://alb-pb-backend-846811393.ap-northeast-1.elb.amazonaws.com" },
        { "name": "CSRF_TRUSTED_ORIGINS", "value": "http://*.amazonaws.com" }
      ],
      "secrets": [
        {
          "name": "DJANGO_SECRET_KEY",
          "valueFrom": "arn:aws:secretsmanager:ap-northeast-1:321869097870:secret:pb/prod/backend:DJANGO_SECRET_KEY::"
        },
        {
          "name": "DB_USER",
          "valueFrom": "arn:aws:secretsmanager:ap-northeast-1:321869097870:secret:pb/prod/backend:DB_USER::"
        },
        {
          "name": "DB_PASSWORD",
          "valueFrom": "arn:aws:secretsmanager:ap-northeast-1:321869097870:secret:pb/prod/backend:DB_PASSWORD::"
        }
      ],
      "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
          "awslogs-group": "/ecs/pb-backend",
          "awslogs-region": "ap-northeast-1",
          "awslogs-stream-prefix": "ecs"
        }
      }
    }
  ]
}
